---
interface Props {
  isMobile?: boolean;
}

const { isMobile = false } = Astro.props;
---
<div class={`relative group ${isMobile ? 'w-full' : ''}`}>
  <button class={`font-bold hover:bg-[#FF3366] hover:text-white px-4 py-2 transition-colors w-full text-left ${isMobile ? 'border-b-2 border-black dark:border-gray-200' : ''}`}>
    About us
  </button>
  <div class={`${isMobile ? 'relative w-full' : 'absolute right-0 w-48'} bg-white dark:bg-gray-800 rounded-lg shadow-lg hidden group-hover:block group-focus:block z-50`}>
    <a 
      href="https://github.com/keys4ever" 
      target="_blank" 
      rel="noopener noreferrer"
      class="block px-4 py-3 text-black dark:text-white hover:bg-[#FF3366] hover:text-white font-bold border-b border-gray-200 dark:border-gray-700 rounded-t-lg"
    >
      Keys4Ever
    </a>
    <a 
      href="https://github.com/kosmosama" 
      target="_blank" 
      rel="noopener noreferrer"
      class="block px-4 py-3 text-black dark:text-white hover:bg-[#FF3366] hover:text-white font-bold rounded-b-lg"
    >
      Kosmo
    </a>
  </div>
</div>