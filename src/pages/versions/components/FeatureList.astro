---
type Color = 'red' | 'green' | 'blue';

interface Props {
  title: string;
  items: string[];
  color: Color;
}

const { title, items = ['a', 'a', 'a'], color } = Astro.props;
---
<div class="mb-4">
  <h3 class={`text-sm sm:text-base font-bold mb-2 ${color == 'red' ? 'bg-red-500 dark:bg-red-700' : color == 'green' ? 'bg-green-500 dark:bg-green-700' : color == 'blue' ? 'bg-blue-500 dark:bg-blue-700' : ''} text-white px-2 py-1 inline-block`}>
    {title}
  </h3>
  <ul class="list-none space-y-1 mt-2">
    {items.map((item: string) => (
      <li class={`font-mono text-sm sm:text-base border-l-4 ${color == 'red' ? 'border-red-500 dark:border-red-700' : color == 'green' ? 'border-green-500 dark:border-gren-700' : 'border-blue-500 dark:border-blue-700'} pl-3 sm:pl-4`}>
        {item}
      </li>
    ))}
  </ul>
</div>