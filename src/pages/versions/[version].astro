---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const versions = await getCollection('versions');
  return versions.map(entry => ({
    params: { version: entry.data.version },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { version, date, features, improvements, bugfixes } = entry.data;
---

<Layout title={`Version ${version} - Manga Library`}>
  <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <div class="max-w-3xl mx-auto">
      <!-- Back Button -->
      <div class="mb-6 sm:mb-8">
        <a href="/versions" 
           class="bg-black text-white dark:bg-gray-700 dark:text-gray-200 px-3 sm:px-4 py-2 hover:bg-yellow-300 dark:hover:bg-yellow-700 hover:text-black dark:hover:text-black transition-colors font-bold text-sm sm:text-base">
          &larr; Back to versions
        </a>
      </div>
      
      <!-- Version Card -->
      <div class="bg-white dark:bg-gray-800 border-4 border-black dark:border-gray-700 p-4 sm:p-8">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 sm:mb-8 border-b-4 border-black dark:border-gray-600 pb-4 gap-3">
          <h1 class="text-3xl sm:text-4xl font-black text-black dark:text-white">Version {version}</h1>
          <span class="font-mono text-sm sm:text-base bg-black text-white dark:bg-gray-600 dark:text-gray-200 px-3 sm:px-4 py-1 sm:py-2 inline-block">
            {date}
          </span>
        </div>

        <!-- Features -->
        {features && (
          <div class="mb-8 sm:mb-12">
            <h2 class="text-lg sm:text-xl font-black mb-3 sm:mb-4 bg-blue-500 dark:bg-blue-700 text-white px-3 sm:px-4 py-1 sm:py-2 inline-block">
              New Features
            </h2>
            <ul class="list-none space-y-2 sm:space-y-3 mt-3 sm:mt-4 border-l-4 border-blue-500 dark:border-blue-700 pl-3 sm:pl-4">
              {features.map((feature) => (
                <li class="font-mono text-sm sm:text-base text-black dark:text-gray-200">{feature}</li>
              ))}
            </ul>
          </div>
        )}

        <!-- Improvements -->
        {improvements && (
          <div class="mb-8 sm:mb-12">
            <h2 class="text-lg sm:text-xl font-black mb-3 sm:mb-4 bg-green-500 dark:bg-green-700 text-white px-3 sm:px-4 py-1 sm:py-2 inline-block">
              Improvements
            </h2>
            <ul class="list-none space-y-2 sm:space-y-3 mt-3 sm:mt-4 border-l-4 border-green-500 dark:border-green-700 pl-3 sm:pl-4">
              {improvements.map((improvement) => (
                <li class="font-mono text-sm sm:text-base text-black dark:text-gray-200">{improvement}</li>
              ))}
            </ul>
          </div>
        )}

        <!-- Bug Fixes -->
        {bugfixes && (
          <div>
            <h2 class="text-lg sm:text-xl font-black mb-3 sm:mb-4 bg-red-500 dark:bg-red-700 text-white px-3 sm:px-4 py-1 sm:py-2 inline-block">
              Bug Fixes
            </h2>
            <ul class="list-none space-y-2 sm:space-y-3 mt-3 sm:mt-4 border-l-4 border-red-500 dark:border-red-700 pl-3 sm:pl-4">
              {bugfixes.map((bugfix) => (
                <li class="font-mono text-sm sm:text-base text-black dark:text-gray-200">{bugfix}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  </main>
</Layout>