---
import Layout from "../layouts/Layout.astro";
import Features from "../Features/Features.astro";
import { GithubIcon } from "lucide-react";
---

<Layout title="Manga Library - Chrome Extension">
  <main class="container mx-auto px-4 py-8 sm:py-12 max-w-7xl">
    <div class="text-center mb-8 sm:mb-16">
      <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-black text-black dark:text-white mb-4 sm:mb-6 leading-tight"
      >
        MANGA LIBRARY
        <span class="block text-xl sm:text-2xl font-bold mt-2 sm:mt-4"
          >Your Ultimate Manga Collection Manager</span
        >
      </h1>
      <div class="mt-6 sm:mt-8 flex justify-center gap-4">
        <a
          href="https://chromewebstore.google.com/detail/manga-library/agdepjcnhljkjcnnmanbooinhoaieidc"
          class="bg-[#FF3366] hover:bg-transparent hover:text-[#FF3366] hover:border hover:border-[#FF3366] text-white px-6 sm:px-8 py-3 sm:py-4 text-lg sm:text-xl font-bold inline-block transition-colors rounded-lg flex items-center justify-center"
          target="_blank"
          rel="noopener noreferrer"
        >
          ADD TO CHROME
        </a>
        <a
          href="https://github.com/Kosmosama/Mangaextension"
          class="border border-[#FF3366] hover:bg-[#FF3366] hover:text-white text-[#FF3366] px-6 sm:px-8 py-3 sm:py-4 text-lg sm:text-xl font-bold inline-flex items-center gap-2 transition-colors rounded-lg"
          target="_blank"
          rel="noopener noreferrer"
        >
          <GithubIcon />
          SOURCE CODE
        </a>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6 sm:gap-8 md:gap-12 items-start">
      <div
        class="bg-white dark:bg-gray-800 min-h-[300px] sm:h-96 w-full p-4 sm:p-8 rounded-lg shadow-lg"
      >
        <img
          src="https://lh3.googleusercontent.com/rH5_uGMXIj0zAnKTpM7JKdgTeY6ZtuSnPtk77W2Z_ZvbaGmrMBesuRSF9EDAVaAXMvZtFvC-eXXuu-m3nSln-K8C_g=s1280-w1280-h800"
          alt="Manga Library Extension Screenshot"
          class="w-full h-full object-cover rounded-lg"
        />
      </div>

      <div
        class="bg-white dark:bg-gray-800 min-h-[300px] sm:h-96 w-full p-4 sm:p-8 rounded-lg shadow-lg"
      >
        <h2
          class="text-xl sm:text-2xl font-black text-black dark:text-white mb-2"
        >
          FEATURES
        </h2>
        <Features />
      </div>
    </div>
  </main>
</Layout>
